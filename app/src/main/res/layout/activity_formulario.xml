<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        tools:context=".FormularioActivity">


        <EditText
            android:id="@+id/nome_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome" />

        <EditText
            android:id="@+id/endereco_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ProfissÃ£o" />

        <EditText
            android:id="@+id/telefone_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Telefone" />


        <EditText
            android:id="@+id/profissao_formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Site" />


        <Button
            android:id="@+id/button2"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/ic_forward_black_24dp"
            android:text="Enviar
" />


    </LinearLayout>

</ScrollView>